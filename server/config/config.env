# Combined environment variables for all services
# --- NGINX ---
NGINX_HOST=localhost
NGINX_PORT=80

# --- Moodle DB ---
MYSQL_ROOT_PASSWORD=secret
MYSQL_DATABASE=moodle
MYSQL_USER=moodleuser
MYSQL_PASSWORD=secret

# --- Moodle ---
DB_HOST=moodle-db
DB_NAME=moodle
DB_USER=moodleuser
DB_PASS=secret
WWWROOT=http://localhost:8080/moodle
MOODLE_URL=http://localhost:8080/moodle

# --- Petclinic DB ---
POSTGRES_DB=petclinic
POSTGRES_USER=petclinic
POSTGRES_PASSWORD=petclinic

# --- Petclinic ---
SPRING_PROFILES_ACTIVE=postgres
POSTGRES_URL=jdbc:postgresql://petclinic-db:5432/petclinic
POSTGRES_USER=petclinic
POSTGRES_PASS=petclinic
SPRING_DATASOURCE_URL=jdbc:postgresql://petclinic-db:5432/petclinic
SPRING_DATASOURCE_USERNAME=petclinic
SPRING_DATASOURCE_PASSWORD=petclinic
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SERVER_SSL_ENABLED=false
SERVER_FORWARD_HEADERS_STRATEGY=framework
SPRING_WEBMVC_SERVLET_PATH=/petclinic
